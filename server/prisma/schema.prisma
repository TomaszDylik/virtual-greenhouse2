generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  plants   Plant[]

  @@map("users")
}

model Species {
  id         Int     @id @default(autoincrement())
  name       String  @unique
  dryingRate Float   @map("drying_rate")
  plants     Plant[]

  @@map("species")
}

model Plant {
  id           Int      @id @default(autoincrement())
  name         String
  currentWater Float    @default(100.0) @map("current_water")
  isDead       Boolean  @default(false) @map("is_dead")
  speciesId    Int      @map("species_id")
  userId       Int      @map("user_id")
  createdAt    DateTime @default(now()) @map("created_at")

  species Species @relation(fields: [speciesId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs    Log[]

  @@map("plants")
}

model Log {
  id        Int      @id @default(autoincrement())
  message   String
  level     String
  plantId   Int?     @map("plant_id")
  userId    Int?     @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  plant Plant? @relation(fields: [plantId], references: [id], onDelete: SetNull)

  @@map("logs")
}